start on starting <%= app %>-<%= name %>
stop on stopping <%= app %>-<%= name %>
respawn

<% engine.env.each_pair do |var,env| %>
evn <%= var.upcase %>=<%= shell_quote(env) %>
<% end %>
env PORT=<%= port %>

exec su -l -s /bin/bash -c 'cd <%= engine.root %>; exec "$0" "$@"' <%= user %> -- <%= process.command %> >> <%= log %>/<%=name%>-<%=num%>.log 2>&1
